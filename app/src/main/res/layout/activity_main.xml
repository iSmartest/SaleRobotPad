<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@mipmap/rectangle"
    tools:context="com.freeintelligence.robotclient.ui.activity.MainActivity">
    <include
        layout="@layout/toolbar"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="18px"
        android:layout_marginRight="18px"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_first_item"
            android:layout_width="444px"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_hot"
                android:layout_width="match_parent"
                android:layout_height="240px"
                android:background="@color/colorFirstbg"
                android:src="@drawable/hotcar" />
            <ImageView
                android:id="@+id/iv_second"
                android:layout_width="match_parent"
                android:layout_height="240px"
                android:background="@color/colorFirstbg"
                android:layout_marginTop="50px"
                android:src="@drawable/second" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_second_item"
            android:layout_width="577px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23px"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_service"
                android:layout_width="match_parent"
                android:layout_height="240px"
                android:background="@color/colorFirstbg"
                android:src="@drawable/service" />
            <ImageView
                android:id="@+id/iv_vip"
                android:layout_width="match_parent"
                android:layout_height="240px"
                android:background="@color/colorFirstbg"
                android:layout_marginTop="50px"
                android:padding="6dp"
                android:src="@drawable/vip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_three_item"
            android:layout_width="577px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23px"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_inspect"
                android:layout_width="match_parent"
                android:layout_height="240px"
                android:background="@color/colorFirstbg"
                android:src="@drawable/inspect" />

            <ImageView
                android:id="@+id/iv_subscribe"
                android:layout_width="match_parent"
                android:layout_height="240px"
                android:background="@color/colorFirstbg"
                android:layout_marginTop="50px"
                android:src="@drawable/sub" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_set"
            android:layout_width="241px"
            android:layout_height="530px"
            android:background="@color/colorFirstbg"
            android:paddingVertical="6dp"
            android:layout_marginLeft="23px"
            android:src="@drawable/group" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_linshi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/first_title"
        android:textColor="@color/colorWhite"
        android:layout_centerInParent="true"
        android:layout_marginBottom="40dp"
        android:textSize="28px" />
</RelativeLayout>

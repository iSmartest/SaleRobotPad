<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorWhite">
    <RelativeLayout
        android:layout_width="468px"
        android:layout_height="410px"
        android:background="@drawable/image_item_style">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="276px"
            android:background="@drawable/shape_sideline"
            android:src="@drawable/key"
            android:scaleType="centerCrop"
            android:id="@+id/iv_show" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color"
            android:layout_below="@+id/iv_show"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="52px"
            android:paddingLeft="22px"
            android:textColor="#E51C23"
            android:textSize="28px"
            android:text="227元"
            android:gravity="center_vertical"
            android:id="@+id/tv_showmo"
            android:layout_below="@+id/iv_show"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:layout_alignParentBottom="true"
            android:text="奥迪车型系列钥匙环 A4"
            android:gravity="center"
            android:textSize="24px"
            android:id="@+id/tv_showname"
            android:layout_marginBottom="25px"/>
    </RelativeLayout>
</LinearLayout>
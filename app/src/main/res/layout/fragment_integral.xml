<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105px"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="105px"
            android:layout_marginLeft="170px"
            android:gravity="center_vertical"
            android:text="手机号"
            android:textColor="@color/colorBlack"
            android:textSize="36px" />

        <TextView
            android:id="@+id/tv_interphone"
            android:layout_width="wrap_content"
            android:layout_height="105px"
            android:layout_marginLeft="140px"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textColor="@color/colorBlack"
            android:textSize="36px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105px"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="105px"
            android:layout_marginLeft="170px"
            android:gravity="center_vertical"
            android:text="积分"
            android:textColor="@color/colorBlack"
            android:textSize="36px" />

        <TextView
            android:id="@+id/tv_intersor"
            android:layout_width="wrap_content"
            android:layout_height="105px"
            android:layout_weight="1"
            android:layout_marginLeft="190px"
            android:gravity="center_vertical"
            android:textColor="@color/colorBlack"
            android:textSize="36px" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:layout_marginTop="0.5dp"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:paddingLeft="64px"
        android:text="积分明细"
        android:textColor="@color/colorBlack"
        android:textSize="48px" />

    <com.example.xrecyclerview.XRecyclerView
        android:id="@+id/rl_integral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp">
    </com.example.xrecyclerview.XRecyclerView>
</LinearLayout>
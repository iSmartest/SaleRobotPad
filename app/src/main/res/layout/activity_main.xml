<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@mipmap/rectangle"
    tools:context="com.freeintelligence.robotclient.ui.activity.MainActivity">
    <include
        layout="@layout/toolbar"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_9"
        android:layout_centerInParent="true"
        android:paddingRight="@dimen/dp_9"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_first_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_weight="3"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_hot"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_72"
                android:layout_weight="1"
                android:background="@color/colorFirstbg"
                android:padding="@dimen/dp_6"
                android:src="@drawable/hotcar" />
            <ImageView
                android:id="@+id/iv_second"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_72"
                android:layout_weight="1"
                android:background="@color/colorFirstbg"
                android:layout_marginTop="@dimen/dp_25"
                android:padding="@dimen/dp_6"
                android:src="@drawable/second" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_second_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_weight="4"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_service"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_72"
                android:layout_weight="1"
                android:background="@color/colorFirstbg"
                android:layout_marginBottom="@dimen/dp_13"
                android:padding="@dimen/dp_6"
                android:src="@drawable/service" />
            <ImageView
                android:id="@+id/iv_vip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_72"
                android:layout_weight="1"
                android:background="@color/colorFirstbg"
                android:layout_marginTop="@dimen/dp_13"
                android:padding="@dimen/dp_6"
                android:src="@drawable/vip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_three_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_weight="4"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_inspect"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_72"
                android:layout_weight="1"
                android:background="@color/colorFirstbg"
                android:layout_marginBottom="@dimen/dp_13"
                android:padding="@dimen/dp_6"
                android:src="@drawable/inspect" />

            <ImageView
                android:id="@+id/iv_subscribe"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_72"
                android:layout_weight="1"
                android:background="@color/colorFirstbg"
                android:padding="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_13"
                android:src="@drawable/sub" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_set"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_170"
            android:background="@color/colorFirstbg"
            android:layout_marginLeft="@dimen/dp_12"
            android:paddingVertical="@dimen/dp_6"
            android:src="@drawable/group" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_linshi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/first_title"
        android:textColor="@color/colorWhite"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/dp_40"
        android:textSize="@dimen/dp_14" />
</RelativeLayout>

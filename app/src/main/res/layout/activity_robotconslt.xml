<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colortitlebar"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.freeintelligence.robotclient.ui.activity.RobotconsltActivity">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_this1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_15"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dp_11" />

            <TextView
                android:id="@+id/tv_robotan2"
                android:layout_width="@dimen/dp_174"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_12"
                android:textSize="@dimen/dp_8" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_mic"
                android:layout_width="@dimen/dp_43"
                android:layout_height="@dimen/dp_43"
                android:layout_centerHorizontal="true"
                android:src="@drawable/maike" />

            <TextView
                android:id="@+id/tv_rbcon3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_mic"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_6"
                android:text="点击上方麦克风开始语音咨询"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dp_6"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_mic2"
                android:layout_width="@dimen/dp_43"
                android:layout_height="@dimen/dp_43"
                android:src="@drawable/maike"/>
            <ImageView
                android:id="@+id/iv_yinbo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/tv_ifly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="语音技术由科大讯飞提供"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="@dimen/dp_16"
                android:textSize="@dimen/dp_5" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>

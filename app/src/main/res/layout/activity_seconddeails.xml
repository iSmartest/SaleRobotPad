                            android:layout_weight="1"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/dp_10" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:text="上牌地"
                            android:layout_weight="1"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/dp_10" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:text="排量"
                            android:layout_weight="1"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/dp_10" />
                    </LinearLayout>

                    <LinearLayout

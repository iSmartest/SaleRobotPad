<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/rectangle"
    tools:context="com.freeintelligence.robotclient.ui.activity.SubscribeActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_textdrive"
            android:layout_width="310px"
            android:layout_height="310px"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_subbg"
            android:gravity="center"
            android:text="爱车试驾"
            android:textSize="36px" />

        <TextView
            android:id="@+id/tv_maintain"
            android:layout_width="310px"
            android:layout_height="310px"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_subbg"
            android:gravity="center"
            android:text="维修保养"
            android:layout_marginLeft="170px"
            android:layout_toRightOf="@+id/tv_textdrive"
            android:textSize="36px" />
    </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.freeintelligence.robotclient.ui.activity.Login2Activity">
    <EditText
        android:layout_width="477dp"
        android:layout_height="48dp"
        android:background="@color/colorWhite"
        android:textSize="18dp"
        android:textColorHint="@color/colorrim"
        android:layout_gravity="center_vertical"
        android:hint="请输入账号"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="238.5dp"
        android:id="@+id/et_login_account"
        android:padding="10dp"/>
    <EditText
        android:layout_width="477dp"
        android:layout_height="48dp"
        android:layout_marginTop="51dp"
        android:layout_marginLeft="238.5dp"
        android:hint="请输入密码"
        android:id="@+id/et_login_possword"
        android:background="@color/colorWhite"
        android:textColorHint="@color/colorrim"
        android:padding="10dp"/>
    <TextView
        android:layout_width="477dp"
        android:layout_height="48dp"
        android:layout_marginLeft="238.5dp"
        android:layout_marginTop="129dp"
        android:id="@+id/tv_login_load"
        android:text="登录"
        android:textSize="18dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorbgbule"
        android:gravity="center"/>
</LinearLayout>

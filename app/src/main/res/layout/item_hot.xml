<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="956px"
    android:layout_height="291px"
    android:layout_marginTop="8px"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center|left"
        android:paddingLeft="21px">
        <ImageView
            android:id="@+id/iv_newcar"
            android:layout_width="350px"
            android:layout_height="230px"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:background="@drawable/image_item_style"
            android:src="@drawable/car" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="45px"
            android:layout_toRightOf="@+id/iv_newcar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_hotcarname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24px"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="全新奥迪A8L 驾驭明天的智慧"
                android:textColor="@color/colorNewCartitle"
                android:textSize="28px" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_hotcaradapter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </LinearLayout>






</LinearLayout>
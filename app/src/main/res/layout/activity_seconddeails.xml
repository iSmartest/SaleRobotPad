                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/dp_10" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/dp_281"
                        android:layout_height="@dimen/dp_60"

                        android:background="@drawable/shape_redselling">

                        <TextView
                            android:id="@+id/tv_redselling"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_allredselling"
                            android:gravity="center"
                            android:paddingHorizontal="@dimen/dp_8"
                            android:text="@string/selling"
                            android:textSize="@dimen/dp_14" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_redselling"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_toRightOf="@+id/tv_redselling"></android.support.v7.widget.RecyclerView>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_68"
                android:layout_marginTop="@dimen/dp_13"
                android:orientation="horizontal">

                <!--   <ImageView
                       android:layout_width="0dp"
                       android:layout_height="113dp"
                       android:layout_marginHorizontal="3dp"
                       android:layout_weight="1"
                       android:background="@color/colorbggrey"
                       android:id="@+id/iv_sd1"/>-->

                <com.freeintelligence.robotclient.view.MyRecyclerView
                    android:id="@+id/rv_picseconddea"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></com.freeintelligence.robotclient.view.MyRecyclerView>
            </LinearLayout>

            <com.freeintelligence.robotclient.view.MyGridView
                android:id="@+id/rv_second"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_426"
                android:layout_marginTop="@dimen/dp_19"
                android:numColumns="3">

            </com.freeintelligence.robotclient.view.MyGridView>

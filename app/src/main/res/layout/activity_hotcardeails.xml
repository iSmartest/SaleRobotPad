<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="com.freeintelligence.robotclient.ui.activity.HotcardeailsActivity">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:id="@+id/rl_hotcardeails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dp_3">

        <cn.jzvd.JZVideoPlayerStandard
            android:id="@+id/jz_hotcar"
            android:layout_width="@dimen/dp_270"
            android:layout_height="@dimen/dp_138"
            android:layout_marginLeft="@dimen/dp_1.5"
            android:layout_marginTop="@dimen/dp_4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_toRightOf="@+id/jz_hotcar"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_3"
                    android:text="新车预售价:"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/dp_8" />

                <TextView
                    android:id="@+id/tv_price1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:padding="@dimen/dp_3"
                    android:text="10.2-20.5万"
                    android:textColor="@color/colorred"
                    android:textSize="@dimen/dp_8" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_3"
                    android:text="车商城报价:"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/dp_8" />

                <TextView
                    android:id="@+id/tv_price2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:padding="@dimen/dp_3"
                    android:text="10.2-20.5万"
                    android:textColor="@color/colorred"
                    android:textSize="@dimen/dp_8" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_carcolor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp_6"
                    android:paddingLeft="@dimen/dp_3"
                    android:paddingTop="@dimen/dp_6"
                    android:text="车身颜色"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/dp_8" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_hotcarcolor"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_8"></android.support.v7.widget.RecyclerView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_3"
                    android:text="发动机:"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/dp_8" />

                <TextView
                    android:id="@+id/tv_displacement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:padding="@dimen/dp_3"
                    android:text="2.0T3.0T5.0T"
                    android:textColor="@color/colorbgbule"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_3"
                    android:text="变速箱:"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/dp_8" />

                <TextView
                    android:id="@+id/hoatcarbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:padding="@dimen/dp_3"
                    android:text="手自一体"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/dp_8" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_3"
                    android:text="车身结构:"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/dp_8" />

                <TextView
                    android:id="@+id/tv_carsturcture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:padding="@dimen/dp_3"
                    android:text="3箱"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/dp_8" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_3"
                    android:text="用户评分:"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/dp_8" />

                <TextView
                    android:id="@+id/tv_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:padding="@dimen/dp_3"
                    android:text="4.5分"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/dp_8" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_1"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_pichotacardeails"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_1"
        android:text="其他车型"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/dp_10" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_hotacardeails"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
